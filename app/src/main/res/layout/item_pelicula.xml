<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/separador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Película"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Título"
        android:textSize="22dp"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@+id/separador"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tvAno"
        app:layout_constraintBottom_toTopOf="@+id/tvID"
        />
    <TextView
        android:id="@+id/tvAno"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Año"
        android:textSize="22dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="80dp"
        app:layout_constraintTop_toBottomOf="@+id/separador"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tvTitulo"
        app:layout_constraintBottom_toBottomOf="@+id/tvTitulo"
        />
    <TextView
        android:id="@+id/tvID"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ID"
        android:textSize="18dp"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@+id/tvTitulo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tvTipo"
        app:layout_constraintBottom_toTopOf="@+id/tvPoster"
        />
    <TextView
        android:id="@+id/tvTipo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tipo"
        android:textSize="18dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="80dp"
        app:layout_constraintTop_toBottomOf="@+id/tvTitulo"
        app:layout_constraintLeft_toRightOf="@+id/tvID"
        app:layout_constraintBottom_toBottomOf="@+id/tvID"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/tvPoster"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Poster"
        android:textSize="18dp"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:layout_constraintTop_toBottomOf="@+id/tvID"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/tvPais"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="País"
        android:textSize="18dp"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@+id/tvPoster"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tvGenero"
        />
    <TextView
        android:id="@+id/tvGenero"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Género"
        android:textSize="18dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="80dp"
        app:layout_constraintTop_toBottomOf="@+id/tvPoster"
        app:layout_constraintLeft_toRightOf="@+id/tvPais"
        app:layout_constraintBottom_toBottomOf="@+id/tvPais"
        app:layout_constraintRight_toRightOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>